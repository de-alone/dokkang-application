<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/editSubjectbutton"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.33333"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:text="Subject Edit"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/pInfobutton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:background="@color/green"
        />

    <Button
        android:id="@+id/pInfobutton"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.333333"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:text="Personal Info Edit"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/editSubjectbutton"
        app:layout_constraintRight_toLeftOf="@id/LogOutbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:background="@color/green"
        />

    <Button
        android:id="@+id/LogOutbutton"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.33333"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:text="Log out"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/pInfobutton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:background="@color/green"/>
</androidx.constraintlayout.widget.ConstraintLayout>