<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/signup_idTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/id"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/left_vertical"
        app:layout_constraintTop_toTopOf="@+id/horizontal" />

    <TextView
        android:id="@+id/signup_pwTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/pwd"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/signup_idEditText"
        app:layout_constraintTop_toBottomOf="@+id/signup_idEditText" />

    <TextView
        android:id="@+id/NickNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/nn"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/signup_pwEditText"
        app:layout_constraintTop_toBottomOf="@+id/signup_pwEditText"/>

    <TextView
        android:id="@+id/DepartmentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/dpt"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/nnEditText"
        app:layout_constraintTop_toBottomOf="@+id/nnEditText"/>

    <EditText
        android:id="@+id/signup_idEditText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/id"
        android:inputType="textPersonName"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/right_vertical"
        app:layout_constraintStart_toStartOf="@+id/signup_idTextView"
        app:layout_constraintTop_toBottomOf="@+id/signup_idTextView"
        android:importantForAutofill="no"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

    <EditText
        android:id="@+id/signup_pwEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/pwd"
        android:inputType="textPassword"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/right_vertical"
        app:layout_constraintStart_toStartOf="@+id/signup_pwTextView"
        app:layout_constraintTop_toBottomOf="@+id/signup_pwTextView"
        android:importantForAutofill="no"/>

    <EditText
        android:id="@+id/nnEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/nn"
        android:inputType="text"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/right_vertical"
        app:layout_constraintStart_toStartOf="@+id/NickNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/NickNameTextView"
        android:importantForAutofill="no"/>

    <EditText
        android:id="@+id/dpEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="@string/dpt"
        android:inputType="text"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/right_vertical"
        app:layout_constraintStart_toStartOf="@+id/DepartmentTextView"
        app:layout_constraintTop_toBottomOf="@+id/DepartmentTextView"
        android:importantForAutofill="no"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#004907"
        android:text="@string/sign_up"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@+id/right_vertical"
        app:layout_constraintStart_toStartOf="@+id/left_vertical"
        app:layout_constraintTop_toBottomOf="@+id/dpEditText" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

</androidx.constraintlayout.widget.ConstraintLayout>